{% extends "layout.j2" %}
{% block body %}

{% if meta.schema.valid %}

  <div class="ui green segment">
    <div class="header">
      <i class="green check icon"></i>
      Data match schema <code>{{ meta.schema.schema }}</code>
    </div>
  </div>

{% else %}

  <div class="ui red attached segment">
    <div class="header">
      <i class="red times icon"></i>
      Data doesn't match schema {{ meta.schema.schema }}
    </div>
  </div>
  <div class="ui bottom attached negative icon message">
    <i class="exclamation circle icon"></i>
    <div class="content">
      <div class="header">Schema validation errors</div>
      <pre><code>{{ meta.schema.error }}</code></pre>
    </div>
  </div>

{% endif %}

  <div class="ui segment">
    <pre><code>{{ data|to_yaml }}</code></pre>
  </div>
</div>

{% endblock %}